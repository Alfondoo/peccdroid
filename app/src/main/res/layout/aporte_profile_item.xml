<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_contenido_aporte_profile_vh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Puto texto largolarguisimo imparaplaindependientelargolarguisimo imparaplaindependientelargolarguisimo imparaplaindependientelargolarguisimo imparaplaindependiente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_creacion_aporte_profile_vh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="hace 13 dÃ­as"
        android:id="@+id/tv_creacion_aporte_profile_vh"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_historia_aporte_profile_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Historia"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_profile_vh"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/tv_puntuacion_aporte_profile_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="4.5"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_historia_aporte_profile_vh"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_profile_vh"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.35" />


    <ImageView
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:src="@drawable/ic_puntuaciones_oscuro"
        android:id="@+id/iv_puntuacion_aporte_profile_vh"
        app:layout_constraintLeft_toRightOf="@+id/tv_puntuacion_aporte_profile_vh"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_puntuacion_aporte_profile_vh"
        app:layout_constraintBottom_toBottomOf="@+id/tv_puntuacion_aporte_profile_vh"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/iv_es_bifurcable_aporte_profile_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_bifurcable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_profile_vh" />

    <ImageView
        android:id="@+id/iv_no_bifurcable_aporte_profile_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_no_bifurcable"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_profile_vh" />

    <ImageView
        android:id="@+id/iv_es_aceptado_true_aporte_profile_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_aceptado"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_profile_vh" />

    <ImageView
        android:id="@+id/iv_es_aceptado_false_aporte_profile_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_no_aceptado"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_profile_vh" />

</android.support.constraint.ConstraintLayout>