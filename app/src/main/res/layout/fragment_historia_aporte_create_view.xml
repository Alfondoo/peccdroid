<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_contenido_aporte_historia_aporte_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:counterEnabled="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_contenido_aporte_historia_aporte_create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Contenido"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="8" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_reglas_aporte_label_historia_aporte_create_view"
        android:layout_height="wrap_content"
        android:text="Reglas de aporte:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/til_contenido_aporte_historia_aporte_create"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/til_contenido_aporte_historia_aporte_create" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_reglas_aporte_historia_aporte_create_view"
        android:layout_height="wrap_content"
        android:text="Sin límites"
        app:layout_constraintLeft_toRightOf="@+id/tv_reglas_aporte_label_historia_aporte_create_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_reglas_aporte_label_historia_aporte_create_view"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_reglas_aporte_valor_historia_aporte_create_view"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/tv_reglas_aporte_historia_aporte_create_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_reglas_aporte_label_historia_aporte_create_view"
        android:layout_marginTop="0dp" />

    <CheckBox
        android:id="@+id/cb_bifurcable_historia_aporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Es bifurcable?"
        app:layout_constraintLeft_toLeftOf="@+id/til_contenido_aporte_historia_aporte_create"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_reglas_aporte_label_historia_aporte_create_view" />

    <Button
        android:id="@+id/btn_create_historia_aporte_create"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Crear aporte"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_bifurcable_historia_aporte"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>