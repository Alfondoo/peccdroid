<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_contenido_aporte_detail_vh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:text="Puto texto largolarguisimo imparaplaindependientelargolarguisimo imparaplaindependientelargolarguisimo imparaplaindependientelargolarguisimo imparaplaindependiente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_creacion_aporte_detail_vh" />

    <TextView
        android:id="@+id/tv_creacion_aporte_detail_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="hace 13 dÃ­as"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_puntuacion_aporte_detail_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="4.5"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_detail_vh" />


    <ImageView
        android:id="@+id/iv_puntuacion_aporte_detail_vh"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_puntuaciones_oscuro"
        app:layout_constraintBottom_toBottomOf="@+id/tv_puntuacion_aporte_detail_vh"
        app:layout_constraintLeft_toRightOf="@+id/tv_puntuacion_aporte_detail_vh"
        app:layout_constraintTop_toTopOf="@+id/tv_puntuacion_aporte_detail_vh" />

    <ImageView
        android:id="@+id/iv_es_bifurcable_aporte_detail_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_bifurcable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_detail_vh" />

    <ImageView
        android:id="@+id/iv_no_bifurcable_aporte_detail_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_no_bifurcable"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenido_aporte_detail_vh" />

    <TextView
        android:id="@+id/tv_creador_aporte_detail_vh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="0dp"
        android:text="Autor"
        android:textColor="#212121"
        app:layout_constraintBottom_toBottomOf="@+id/tv_creacion_aporte_detail_vh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_creacion_aporte_detail_vh" />

</android.support.constraint.ConstraintLayout>